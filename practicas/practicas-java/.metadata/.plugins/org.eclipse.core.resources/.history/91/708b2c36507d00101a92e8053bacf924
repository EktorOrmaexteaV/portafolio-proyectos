package com.cajero.gui;

import javax.swing.*;
import java.awt.*;
import java.awt.event.ActionListener;
import java.awt.event.ActionEvent;

public class Datos {

	private JFrame frmDatos;
	private JTextField txtCuenta;
	private JTextField txtPIN;
	private JLabel lblSuPinEs;
	private JLabel lblPorFavorCmbielo;
	private JButton btnContinuar;
	
	private final String cuenta;
    private final String PIN;

	
	public Datos(String cuenta, String PIN) {		
		this.cuenta=cuenta;
        this.PIN=PIN;
		
        iniciar();
	}
	
	private void iniciar() {
		frmDatos = new JFrame();
		frmDatos.getContentPane().setBackground(new Color(60, 63, 65));
		frmDatos.setBounds(10, 0, 400, 250);
		frmDatos.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		frmDatos.getContentPane().setLayout(null);
		
		JLabel lblSuNmeroDe = new JLabel("Su número de cuenta es:");
		lblSuNmeroDe.setForeground(UIManager.getColor("Button.disabledToolBarBorderBackground"));
		lblSuNmeroDe.setFont(new Font("Courier 10 Pitch", Font.PLAIN, 15));
		lblSuNmeroDe.setBounds(12, 41, 207, 17);
		frmDatos.getContentPane().add(lblSuNmeroDe);
		
		txtCuenta = new JTextField();
		txtCuenta.setEditable(false);
		txtCuenta.setBounds(220, 38, 154, 21);
		frmDatos.getContentPane().add(txtCuenta);
		txtCuenta.setText(cuenta);
		txtCuenta.setColumns(10);
		
		txtPIN = new JTextField();
		txtPIN.setEditable(false);
		txtPIN.setText(PIN);
		txtPIN.setColumns(10);
		txtPIN.setBounds(220, 70, 33, 21);
		frmDatos.getContentPane().add(txtPIN);
		
		lblSuPinEs = new JLabel("Su PIN es:");
		lblSuPinEs.setForeground(UIManager.getColor("Button.disabledToolBarBorderBackground"));
		lblSuPinEs.setFont(new Font("Courier 10 Pitch", Font.PLAIN, 15));
		lblSuPinEs.setBounds(129, 73, 90, 17);
		frmDatos.getContentPane().add(lblSuPinEs);
		
		lblPorFavorCmbielo = new JLabel("<html>   <div style='text-align: center;'>         Por favor,<br>     cámbielo enseguida   </div> </html> ");
		lblPorFavorCmbielo.setForeground(UIManager.getColor("Button.disabledToolBarBorderBackground"));
		lblPorFavorCmbielo.setFont(new Font("Courier 10 Pitch", Font.PLAIN, 15));
		lblPorFavorCmbielo.setBounds(92, 103, 172, 54);
		frmDatos.getContentPane().add(lblPorFavorCmbielo);
		
		btnContinuar = new JButton("Continuar");
		btnContinuar.addActionListener(new ActionListener() {
			public void actionPerformed(ActionEvent e) {
				frmDatos.dispose();
				new PIN(cuenta);				
			}
		});
		btnContinuar.setForeground(Color.LIGHT_GRAY);
		btnContinuar.setBackground(new Color(60, 63, 65));
		btnContinuar.setBounds(129, 169, 100, 27);
		frmDatos.getContentPane().add(btnContinuar);
		
		frmDatos.setResizable(false);
		frmDatos.setVisible(true);
		frmDatos.setLocationRelativeTo(null);
	}
}
